<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Amplissimus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_500</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/opensans</item>

        <item name="copyIcon">@drawable/ic_baseline_content_copy_24_light</item>
        <item name="schoolIcon">@drawable/ic_baseline_school_48_light</item>
    </style>

    <style name="Theme.Amplissimus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Amplissimus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Amplissimus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>